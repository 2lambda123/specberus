{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jquery": true,
    "mocha": true,
    "node": true
  },
  "plugins": ["node", "promise"],
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:promise/recommended"
  ],
  "rules": {
    "node/no-unpublished-require": "off",
    "no-eval": "error",
    "no-implied-eval": "error"
  }
}
