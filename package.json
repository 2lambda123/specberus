{
  "name": "specberus",
  "version": "1.3.0",
  "description": "Specberus is a checker used at W3C to validate the compliance of Technical Reports with publication rules.",
  "license": "MIT",
  "main": "lib/validator",
  "repository": {
    "type": "git",
    "url": "https://github.com/w3c/specberus.git"
  },
  "dependencies": {
    "body-parser": "^1.13.2",
    "compression": "^1.5.1",
    "express": "^4.13.1",
    "insafe": "^0.3.0",
    "morgan": "^1.6.1",
    "promise": "^7.0.3",
    "request": "^2.58.0",
    "socket.io": "https://github.com/tripu/socket.io#master",
    "superagent": "^1.2.0",
    "whacko": "^0.18.1"
  },
  "devDependencies": {
    "coveralls": "^2.11.2",
    "expect.js": "^0.3.1",
    "istanbul": "^0.4.1",
    "jsdoc": "^3.3.2",
    "mocha": "^2.2.5",
    "nsp": "^2.0.1"
  },
  "scripts": {
    "coverage": "istanbul cover _mocha",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls",
    "jsdoc": "jsdoc -a all -d doc/api/ -e utf8 -r app.js lib/ test/ tools/",
    "nsp": "nsp check",
    "start": "node app.js",
    "test": "mocha -c -G"
  },
  "engines": {
    "node": ">=4.1.2",
    "npm": ">=3.3.6"
  }
}
